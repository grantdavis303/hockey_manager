<h1> <%= @team.name %> Players </h1>

<form action="/teams/<%= @team.id %>/players/new">
    <input type="submit" value="New Player">
</form>

<br>

<% @players.each do |player| %>

    <h3> <%= link_to player.name, "/players/#{player.id}" %> </h3>
    <form action="/players/<%= player.id %>/edit" method="GET" style="display: inline-block;">
        <input type="submit" value="Update Player">
    </form>

<% end %>