<h1> Teams Index </h1>

<form action="/teams/new">
    <input type="submit" value="New Team">
</form>

<br>

<% @teams.each do |team| %>

    <h3> <%= link_to team.name, "/teams/#{team.id}" %> </h3>
    <p> <%= team.created_at %> </p>

    <form action="/teams/<%= team.id %>/edit" method="GET" style="display: inline-block;">
        <input type="submit" value="Update Team">
    </form>

    <form action="/teams/<%= team.id %>" method="DELETE" style="display: inline-block;">
        <input type="submit" value="Delete Team">
    </form> 

<% end %>