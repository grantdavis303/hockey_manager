<h1> Players Index </h1>

<% if @players.count > 0 %>
    <br>
    <% @players.each do |player| %>
        <% if player.won_cup == true %>
            <h3> <%= link_to player.name, "/players/#{player.id}" %> </h3>
            <p> Player Jersey #: <%= player.jersey_number %> </p>
            <p> Has won a Stanley Cup? <%= player.is_a_champion(player.won_cup) %> </p>
            <form action="/players/<%= player.id %>/edit" method="GET" style="display: inline-block;">
                <input type="submit" value="Update Player">
            </form>
            <form action="/players/<%= player.id %>" method="DELETE" style="display: inline-block;">
                <input type="submit" value="Delete Player">
            </form> 
        <% end %>
    <% end %>
    <p> Notice anything special about the player(s) above? </p>  
<% else %>
    <p> Oh no! There are no players. </p>
<% end %>